<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".recycler.paging3.PagingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/paging_forloop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paging"
            app:layout_constraintBottom_toTopOf="@id/paging_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

        <Button
            android:id="@+id/paging_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paging_retrofit"
            app:layout_constraintBottom_toTopOf="@id/pgcr_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paging_forloop_btn" />

        <Button
            android:id="@+id/pgcr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paging_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paging_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
